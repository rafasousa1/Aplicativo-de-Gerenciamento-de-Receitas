generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String?
  email    String  @unique
  password String

  recipes Recipe[]

  @@map("users")
}

model Ingredient {
  id        String @id @default(uuid())
  name      String
  quantity  String

  recipe_id String
  recipe    Recipe @relation(fields: [recipe_id], references: [id])

  @@map("ingredients")
}

model Recipe {
  id          String   @id @default(uuid())
  title       String
  description String?
  created_at  DateTime @default(now())

  user_id    String
  user       User         @relation(fields: [user_id], references: [id])
  
  Ingredient Ingredient[]

  @@map("recipes")
}
